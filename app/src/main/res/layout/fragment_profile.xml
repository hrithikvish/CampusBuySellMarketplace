<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profileDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pfp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/illus_null_profile"
                app:shapeAppearanceOverlay="@style/roundImg"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/editPenImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/pfp"
                android:layout_alignBottom="@+id/pfp"
                android:src="@drawable/baseline_edit_24"/>

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Name Name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/pfp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/clgText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="15sp"
                android:layout_below="@+id/nameText"
                android:textAlignment="center"
                android:layout_centerVertical="true"/>

            <!--<TextView
                android:id="@+id/clgText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rajasthani Sammelans Ganshyamdas Saraf College of Arts & Commerce Sarvodaya Balika Vidyalaya Bhavan Swami Vivekanand Road Malad West Mumbai 400 064"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:layout_below="@+id/nameText"
                android:textAlignment="center"
                android:layout_centerVertical="true"/>-->

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>