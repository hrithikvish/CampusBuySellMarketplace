<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/illus_college"/>

        <RelativeLayout
            android:id="@+id/postTitleAndSaveBtnLayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/clgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/my_grey_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clgName"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="eTime HD Camera" />

            <TextView
                android:id="@+id/postBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postTitle"
                android:maxLines="2"
                android:textSize="15sp"
                android:ellipsize="end"
                android:text="No Description"
                tools:text="is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book." />

            <TextView
                android:id="@+id/datePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postBody"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textSize="12sp"
                tools:text="12 Feb 2024" />

            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postBody"
                android:layout_toEndOf="@id/datePosted"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textSize="12sp"
                android:text=" â€¢ " />

            <TextView
                android:id="@+id/timePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postBody"
                android:layout_toEndOf="@id/separator"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textSize="12sp"
                tools:text="12 Feb 2024" />

            <TextView
                android:id="@+id/threeDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postBody"
                android:layout_toEndOf="@+id/timePosted"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="end|bottom"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingStart="20dp"
                android:text="&#8942;" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>